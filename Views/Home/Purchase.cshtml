                            <option value="Tablet">Tablet</option>
                            <option value="Televisore">Televisore</option>
                            <option value="Fotocamera">Fotocamera</option>
                            <option value="Altoparlante Bluetooth">Altoparlante Bluetooth</option>
                            <option value="Smartwatch">Smartwatch</option>
                            <option value="Drone">Drone</option>
                            <option value="Stampante 3D">Stampante 3D</option>
                            <option value="Console per videogiochi">Console per videogiochi</option>
                        </select>
                    </div>
                    <div class="col-sm-4 fw-bolder fs-3">
                        <input placeholder="QuantitÃ " required type="number" asp-for="Quantita" min="1">
                    </div>
                </div>
            </div>
        </div>
        <br>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Aggiungi al carrello</button>
        </div>
    </form>
</div>

